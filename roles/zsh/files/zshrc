unalias run-help
autoload run-help
HELPDIR=/Users/jburwell/.homebrew/share/zsh/helpfiles

# Path to your oh-my-zsh configuration.
ZSH=$HOME/.oh-my-zsh

# Set name of the theme to load.
# Look in ~/.oh-my-zsh/themes/
# Optionally, if you set this to "random", it'll load a random theme each
# time that oh-my-zsh is loaded.
ZSH_THEME="robbyrussell"

# Customize to your needs...
#export PATH=$PATH:/Library/Java/Home/bin:/Users/jburwell/.rbenv/shims:/Users/jburwell/.homebrew/bin:/Users/jburwell/.homebrew/sbin:/Users/jburwell/.homebrew/share/python:/usr/bin:/bin:/usr/sbin:/sbin:/usr/local/bin:/usr/local/MacGPG2/bin:/Users/jburwell/bin:/Users/jburwell/bin/ant/bin

# Homebrew configuration ...
# BEGIN: Mac specific
export HOMEBREW_HOME=$HOME/.homebrew
export PATH=$HOMEBREW_HOME/bin:$HOMEBREW_HOME/sbin:$PATH:$HOME/bin
export C_INCLUDE_PATH=$HOMEBREW/include
export CPLUS_INCLUDE_PATH=$HOMEBREW/include
# END: Mac specific

# Default editor and pager configurations ...
# TODO Switch to vim ...
VIM=$(which vim)
