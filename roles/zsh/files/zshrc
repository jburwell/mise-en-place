# virtualenvwrapper setup
export WORK_ON_HOME=$HOME/.python/envs
#. /usr/local/bin/virtualenvwrapper.sh

# Java configuration
export IDEA_JDK="$(/usr/libexec/java_home -v 1.6)"
export JAVA_HOME="$(/usr/libexec/java_home -v 1.7)"
export PATH=$JAVA_HOME/bin:$PATH

# Ant configuration
export ANT_HOME=$HOME/bin/ant
export PATH=$PATH:$ANT_HOME/bin

# Maven configuration
export MAVEN_OPTS="-Xmx1024m -XX:MaxPermSize=500m -Djava.net.preferIPv4Stack=true"

# Git configuration
# TODO Switch to Vim ...
export GIT_EDITOR="$VIM -f -c 'startinsert'"

# Alias definitions ...
alias grep='grep --color=auto'
# BEGIN: Mac specific
alias ls='ls -G'
alias ll='ls -alFG'
# END: Mac specific
alias bower='noglob bower'
alias diff='colordiff'

# BEGIN: Mac specific
ZSH_TMUX_ITERM2=true
# END: Mac specific

export VAGRANT_VMWARE_FUSION_APP="/opt/homebrew-cask/Caskroom/vmware-fusion/7.1.2-2779224/VMware Fusion.app"

# Which plugins would you like to load? (plugins can be found in ~/.oh-my-zsh/plugins/*)
# Custom plugins may be added to ~/.oh-my-zsh/custom/plugins/
# Example format: plugins=(rails git textmate ruby lighthouse)
plugins=(git ruby mvn gradle rbenv rake ant python virtualenvwrapper tmux rebar osx bower brew git-flow pip vagrant lein rebar sudo)

